{
    "name": "xalaida/pdo-mock",
    "description": "A mock PDO library for testing database interactions in PHP without a live connection.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Xalaida\\PDOMock\\": "src/"
        }
    },
    "require": {
        "php": "^5.6 | ^7.0 | ^8.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 | ^6.5 | ^9.6 | ^10.5 | ^11.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Xalaida\\PDOMock\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "xalaida",
            "homepage": "https://github.com/xalaida"
        }
    ]
}
