{
    "name": "xalaida/pdo-mock",
    "description": "Mock PDO library for PHP unit testing, allowing query expectation, parameter binding, fetch mode simulation, to test database interactions without a live connection.",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "phpunit": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "Xalaida\\PDOMock\\": "src/"
        }
    },
    "require": {
        "php": "^5.6 | ^8.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 | ^11.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Xalaida\\PDOMock\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "xalaida",
            "email": "nevadskiy@gmail.com"
        }
    ]
}
